<script>
  const cards = new CountUp('cards', 2943);
  const assets = new CountUp('assets', 1000000, { prefix: '$', suffix: '+' });
  const holders = new CountUp('holders', 512);
  cards.start(); assets.start(); holders.start();

  async function connectWallet() {
    if (window.ethereum) {
      try {
        const accounts = await ethereum.request({ method: 'eth_requestAccounts' });
        const account = accounts[0];
        document.getElementById('walletAddress').innerText = account;

        const web3 = new Web3(window.ethereum);
        const balance = await web3.eth.getBalance(account);
        const ethBalance = web3.utils.fromWei(balance, 'ether');
        document.getElementById('ethBalance').innerText = `${parseFloat(ethBalance).toFixed(4)} ETH`;

        document.getElementById('amintBalance').innerText = "10,250 AMINT";
      } catch (error) {
        alert("Wallet connection failed.");
      }
    } else {
      alert("MetaMask is not installed. Please install MetaMask and try again.");
    }
  }
</script>

